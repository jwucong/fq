/* pages/login/login.wxss */

page {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  min-height: 100%;
  overflow: hidden;
}

.bg {
  position:  absolute;
  top: 0;
  left: 0;
  z-index:  0;
  width: 100%;
  height:  100%;
}

.bg-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height:  100%;
  background-color:  rgba(52, 177, 187, 0.85);
}

.login {
  position:  relative;
  z-index: 2;
  box-sizing:  border-box;
  width: 100%;
}

.logo {
  display: block;
  width:  438rpx;
  height:  50rpx;
  margin:  0 auto ;
  padding:  100rpx 0;
}

.form {
  display: block;
  width: 600rpx;
  margin: 0 auto;
  font-size:  14px;
  color: #fff;
}

.input-box {
  position: relative;
  margin-bottom:  30px;
}

.input-box::last-child {
  margin-bottom:  0;
}

.input-box input {
  display: block;
  box-sizing: border-box;
  padding: 0 10px 0 30px;
  height: 30px;
  outline: 0;
  border: 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.6);
  line-height:  30px;
  font-size: 34rpx;
  color: #fff;
}

.clear-input-btn {
  position: absolute;
  top: 50%;
  right: 10rpx;
  z-index: 1;
  width: 16px;
  height: 16px;
  transform: translateY(-50%);
}

.clear-input-btn::before,
.clear-input-btn::after {
  position: absolute;
  top: 50%;
  left: 0;
  content: "";
  display: block;
 border-radius: 2px;
 background-color: #eee;
 width: 100%;
 height: 2px;
}

.clear-input-btn::before {
  transform: rotate(-45deg)
}

.clear-input-btn::after {
   transform: rotate(45deg)
}

.input-placeholder {
  font-size:  12px;
  color: #fff;
}

.login .login-btn {
  margin: 50px 0  20px;
  background-color: #ffd100;
}

.login .register-btn {
  color: #fff;
  border-color:  #fff;
  background-color: rgba(52, 177, 187, 0.5);
}
